# Configuración de entorno para HTR Service - Sacra360

# Base de datos
DATABASE_URL=postgresql://postgres:password@localhost:5432/sacra360

# Configuración del servicio
SERVICE_PORT=8004
LOG_LEVEL=INFO

# Configuración de archivos
MAX_FILE_SIZE=52428800  # 50MB en bytes

# CORS (separar por comas si hay múltiples orígenes)
CORS_ORIGINS=*

# MinIO Object Storage
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=admin
MINIO_SECRET_KEY=password123
# HTR usa bucket separado del OCR
MINIO_HTR_BUCKET=sacra360-htr
MINIO_SECURE=false

# Configuración de HTR Model
HTR_MODEL_PATH=./models/htr_model.pth
HTR_CONFIDENCE_THRESHOLD=0.7
