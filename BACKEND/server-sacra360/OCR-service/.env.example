# Configuración de entorno para OCR Service - Sacra360

# Base de datos
DATABASE_URL=postgresql://postgres:password@localhost:5432/sacra360

# Configuración de OCR
TESSERACT_PATH=/usr/bin/tesseract
OCR_LANGUAGE=spa

# Configuración del servicio
SERVICE_PORT=8003
LOG_LEVEL=INFO

# Configuración de archivos
MAX_FILE_SIZE=52428800  # 50MB en bytes

# CORS (separar por comas si hay múltiples orígenes)
CORS_ORIGINS=*