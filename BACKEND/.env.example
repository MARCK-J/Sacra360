# Configuración de la aplicación Sacra360
# Copiar este archivo como .env y ajustar valores según el entorno

# Configuración general de la aplicación
PROJECT_NAME=Sacra360
VERSION=1.0.0
DEBUG=true
HOST=127.0.0.1
PORT=8000

# Configuración CORS - URLs permitidas separadas por comas
ALLOWED_HOSTS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8080

# Configuración de base de datos PostgreSQL
POSTGRES_SERVER=localhost
POSTGRES_USER=sacra360_user
POSTGRES_PASSWORD=sacra360_password
POSTGRES_DB=sacra360_db
POSTGRES_PORT=5432
# Opcionalmente, puede especificar la URL completa:
# DATABASE_URL=postgresql://sacra360_user:sacra360_password@localhost:5432/sacra360_db

# Configuración de seguridad JWT
SECRET_KEY=your-super-secret-key-change-in-production-min-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=43200

# Configuración de archivos
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=52428800  # 50MB en bytes
ALLOWED_FILE_EXTENSIONS=.pdf,.jpg,.jpeg,.png,.tiff,.tif

# Configuración de MinIO/S3 (opcional)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=sacra360-documents
MINIO_SECURE=false

# Configuración de OCR (Tesseract)
TESSERACT_CMD=tesseract
OCR_LANGUAGES=spa,eng

# Configuración de modelos de IA
AI_MODELS_PATH=./models
HTR_MODEL_PATH=./models/htr_model.pth
BERT_MODEL_NAME=dccuchile/bert-base-spanish-wwm-uncased

# Configuración de logging
LOG_LEVEL=INFO
LOG_FILE=sacra360.log